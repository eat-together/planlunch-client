<div class="row">
  <div style="padding-bottom:10px" class="col-md-12">
    <button {{action 'withdraw'}} class="btn btn-primary btn-xs">Trag mich aus</button>
  </div>
</div>
<div class="row">
  <div class="col-md-5">
    <table class="table table-hover table-condensed">
      <tbody>
        {{#each place in model}}
          {{#view 'hover-row' place=place}}
            <td style="width:200px">
              {{#if place.website}}
                <a title="Internetseite/Mittagskarte in neuem Tab Ã¶ffnen" target="_blank" href="{{unbound place.website}}">
                  {{unbound place.name}}
                </a>
              {{else}}
                {{unbound place.name}}
              {{/if}}
            </td>
            <td style="width:30px">
              <button {{action 'attend' place}} class="btn btn-default btn-xs" title="Trag mich ein">+</button>
            </td>
            <td>{{place.users}}</td>
          {{/view}}
        {{/each}}
      <tbody>
    </table>
  </div>
  <div class="col-md-7">
    <div id="map"></div>
  </div>
</div>
