<div class="row">
  <div style="padding-bottom:10px" class="col-md-12">
    <button {{action 'withdraw'}} class="btn btn-primary btn-xs">Trag mich aus</button>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <table class="table table-hover table-condensed">
      <tbody>
        {{#each place in model}}
        <tr>
          <td><a href="#" {{action "attend" place}}>{{place.name}}</a></td>
          <td>{{place.attendees}}</td>
        </tr>
        {{/each}}
      <tbody>
    </table>
  </div>
</div>
