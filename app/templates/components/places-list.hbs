<ul class="list-unstyled hover">
  {{#each place in model}}
    {{#hover-place place=place hoveredPlace=highlightedPlace}}
      <div class="title-bar">
        {{#if place.website}}
          <a title="Internetseite/Mittagskarte in neuem Tab Ã¶ffnen" target="_blank" href="{{unbound place.website}}">
            {{unbound place.name}}
          </a>
        {{else}}
          <span>{{unbound place.name}}</span>
        {{/if}}
        {{#if place.isNew}}
          <span class="label label-default">Neu</span>
        {{/if}}
        <span class="add" {{action 'selectPlace' place}} data-toggle="modal" data-target="#askTimeModal" title="Trag mich ein">+</span>
      </div>
      <ul class="list-inline left-space">
        {{#each timeSlot in place.time_slots}}
          <li class="time-slot">{{unbound timeSlot.time}}<br /> {{unbound timeSlot.users}}</li>
        {{/each}}
      </ul>
    {{/hover-place}}
  {{/each}}
</ul>
